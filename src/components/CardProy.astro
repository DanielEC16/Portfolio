---
const { title, description, image, link } = Astro.props;
---

<div class="card">
  <img src={image} alt={title} />
  <h3>{title}</h3>
  <p>{description}</p>
  <a href={link}>Ver m√°s</a>
</div>

<style lang="scss">
  .card {
    position: relative;
    border-radius: 12px;
    overflow: hidden;
    &::after {
      content: "";
      position: absolute;
    }
    &::before {
      content: "";
      position: absolute;
      inset: 0; /* cubre todo */
      padding: 4px; /* grosor del borde */
      border-radius: inherit;
      background: linear-gradient(
      90deg,
        var(--jaguar-900),
        var(--jaguar-800),
        var(--jaguar-950),
        var(--jaguar-900),
        var(--jaguar-800)
      );
      background-size: 600% 600%;
      animation: borderMove 5s linear infinite alternate;
      -webkit-mask:
        linear-gradient(#000 0 0) content-box,
        linear-gradient(#000 0 0);
      -webkit-mask-composite: xor;
      z-index: 1;
    }
    img {
      width: 100%;
      height: 200px;
      object-fit: cover;
    }
  }

  
  @keyframes borderMove {
    from {
      background-position: 0% 50%;
    }
    to {
      background-position: 100% 50%;
    }

  }
</style>
